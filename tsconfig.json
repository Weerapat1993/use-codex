{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "./dist",
    "target": "ES5",
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "doc",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}